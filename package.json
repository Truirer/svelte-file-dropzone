{
  "name": "svelte-file-dropzone",
  "version": "2.0.9",
  "description": "Svelte component for fileupload and file dropzone",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "package": "svelte-kit sync && svelte-package "
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "typesVersions": {
    ">4.0": {
      "Dropzone.svelte": [
        "./dist/components/Dropzone.svelte.d.ts"
      ]
    }
  },
  "repository": {
    "url": "https://github.com/thecodejack/svelte-file-dropzone"
  },
  "author": "thecodejack",
  "license": "MIT",
  "peerDependencies": {
    "svelte": "^3.54.0 || ^4.0.0 || ^5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-svelte-csf": "^5.0.0-next.0",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/svelte": "^8.6.12",
    "@storybook/sveltekit": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "playwright": "^1.51.1",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "storybook": "^8.6.12",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@sveltejs/package": "^2.3.10",
    "file-selector": "^2.1.2"
  },
  "keywords": [
    "svelte",
    "svelte3",
    "svelte-components",
    "upload",
    "dropzone",
    "svelte-file-dropzone",
    "svelte-dropzone",
    "sveltejs"
  ],
  "files": [
    "src",
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
